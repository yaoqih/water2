          "rawSql": "SELECT device_id,\n       plant_id,\n       point_id,\n       enabled,\n       CASE\n         WHEN enabled AND (last_seen_at IS NULL OR last_seen_at < now() - interval '5 minutes') THEN 'offline'\n         WHEN NOT enabled THEN 'disabled'\n         ELSE 'online'\n       END AS status,\n       last_seen_at,\n       EXTRACT(EPOCH FROM (now() - COALESCE(last_seen_at, created_at)))::bigint AS silence_sec,\n       report_interval_sec,\n       align_mode,\n       telemetry_topic\nFROM admin_api.v_device_conn_profile\nORDER BY CASE\n           WHEN enabled AND (last_seen_at IS NULL OR last_seen_at < now() - interval '5 minutes') THEN 0\n           WHEN NOT enabled THEN 1\n           ELSE 2\n         END,\n         last_seen_at ASC NULLS FIRST,\n         device_id\nLIMIT 200;"
